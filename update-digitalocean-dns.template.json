{
    "domains": [
        {
            "name": "your-domain.com",
            "records": [
                { "name": "@", "type": "A" },
                { "name": "*", "type": "A" }
            ]
        }
    ],
    "messages": {
        "send_in_color": false,
        "send_to_syslog": true,
        "verbose": false
    },
    "personal_access_token_file": "/full/path/to/digitalocean-personal-access-token-file",
    "public_ip_address_log_file": "/full/path/to/public-ip-address.log"
}
